    </div>
</div>
<div id="password_dlg" class="easyui-dialog" style="width:100%;max-width:400px;padding:30px 60px;display: none"
     data-options="
        title: '修改密码',
        closed: true,
        modal: true,
        draggable: false,
        buttons: [{
            text: '确认',
            iconCls: 'icon-ok',
            handler: $.password.resetPassword
            }, {
            text: '取消',
            iconCls: 'icon-cancel',
            handler: $.password.closeEditDialog
            }]
        ">
    <form id="password_ff" class="easyui-form" action="users/resetPassword" method="post"
          data-options="novalidate:true">
        <div style="margin-bottom:20px">
            <input id="password_ff_input_password" class="easyui-textbox" name="password" style="width:100%"
                   data-options="label:'原始密码:',required:true">
        </div>
        <div style="margin-bottom:20px">
            <input id="password_ff_input_new_password" class="easyui-textbox" name="new_password" style="width:100%"
                   data-options="label:'新密码:',required:true" validType="length[4,32]" id="password" type="password">
        </div>
        <div style="margin-bottom:20px">
            <input id="password_ff_input_repeat_password" class="easyui-textbox" name="role" style="width:100%"
                   data-options="label:'确认密码:',required:true" id="repassword" type="password"
                   validType="equalTo['#password_ff_input_new_password']" invalidMessage="两次输入密码不匹配">
        </div>
    </form>
</div>

<div class="easyui-panel" title="我的借阅记录列表">
    <table id="personal_information_dialog_dg" class="easyui-datagrid" style="width: 100%" rownumbers="true"
           data-options="url:'records/selfRecords',method:'get'">
        <thead>
        <th data-options="field: 'id', title: 'ID', hidden: true"></th>
        <th data-options="field: 'bcode', title: '图书编号'"></th>
        <th data-options="field: 'bname', title: '图书名称'"></th>
        <th data-options="field: 'borrow_date', title: '借阅日期', formatter: function (val, row) {
        return val ? $.formatDate(val,'yyyy-MM-dd') : '';
        }"></th>
        <th data-options="field: 'deadline', title: '应归还日期', formatter: function (val, row) {
        return val ? $.formatDate(val,'yyyy-MM-dd') : '';
        }"></th>
        <th data-options="field: 'return_date', title: '实际归还日期', formatter: function (val, row) {
        return val ? $.formatDate(val,'yyyy-MM-dd') : '';
        }"></th>
        <th data-options="field: 'late_days', title: '逾期天数'"></th>
        <th data-options="field: 'STATUS', title: '状态',formatter:function(value,row){
							return {RETURNED:'已归还',OVERDUE:'超期',MISSED:'损毁遗失',BORROWED:'未归还'}[value]||null;
						}"></th>
        </thead>
    </table>
</div>
<script type="text/javascript" src="/javascripts/sha1.js"></script>
<script type="text/javascript">
    $(function () {
        loadStatistic();
        loadUserInfo();
        function loadStatistic() {
            $.ajax({
                url: 'users/user_details/user_statistic',
                type: 'get',
                dataType: 'json'
            }).done(function (ret) {
                $('#users_statistic_ff').form('load', ret);
            });
        }

        function loadUserInfo() {
            $.ajax({
                url: 'users/user_details/user_info',
                type: 'get',
                dataType: 'json'
            }).done(function (ret) {
                $('#users_user_info_ff').form('load', ret);
            });
        }

        function resetPassword() {
            $.messager.progress({title: '数据保存中,请稍后...'});	// display the progress bar
            var isValid = $('#password_ff').form('enableValidation').form('validate');
            if (!isValid) {
                $.messager.progress('close');	// hide progress bar while the form is invalid
                return;
            }

            var $password_input = $('#password_ff_input_password'),
                    $new_password_input = $('#password_ff_input_new_password'),
                    password = hex_sha1($password_input.val()),
                    new_password = hex_sha1($new_password_input.val());
            $.ajax({
                url: 'users/resetPassword',
                type: 'post',
                dataType: 'json',
                data: {password: password, new_password: new_password}
            }).done(function (ret) {
                if (ret && ret.flag) {
                    $.messager.alert('提示', ret.msg || '更新成功!');
                    closeEditDialog();
                } else {
                    $.messager.alert('提示', ret.msg || '更新失败!');
                }
            }).fail(function () {
                $.messager.alert('提示', ret.msg || '更新失败!');
            }).always(function () {
                $.messager.progress('close');
            });
        }

        function closeEditDialog() {
            $('#password_ff').form('clear');
            $('#password_dlg').dialog('close');
        }

        $.extend({
            password: {
                resetPassword: resetPassword,
                closeEditDialog: closeEditDialog
            }
        })
    });
</script>
